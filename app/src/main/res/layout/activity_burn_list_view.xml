<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nu.khamenketkan.waritsara.weightcontrol.CaloriesListView"
    android:background="@drawable/bgm1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtBurnList"
        android:textSize="@dimen/h1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/livBurnList"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#f7ffffff"
        android:layout_above="@+id/linbottomBurn"
        android:layout_below="@+id/txtBurnList" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linbottomBurn">

        <Button
            android:layout_height="wrap_content"
            android:text="Add Burn"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:textColor="@color/text"
            android:onClick="clickAddBurn"
            android:layout_width="0dp" />

        <Button
            android:layout_height="wrap_content"
            android:text="BACK"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:textColor="@color/text"
            android:onClick="clickBackBurn"
            android:layout_width="0dp" />
    </LinearLayout>

</RelativeLayout>
